{
  "name": "@logpare/mcp",
  "version": "0.1.0",
  "description": "MCP server exposing logpare log compression tools for AI agents",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "logpare-mcp": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "logpare",
    "mcp",
    "model-context-protocol",
    "log-compression",
    "ai-agents",
    "ucp",
    "ucp-ready"
  ],
  "author": "Jeff Green <contact@hirejeffgreen.com>",
  "license": "MIT",
  "homepage": "https://github.com/logpare/logpare/tree/main/packages/mcp",
  "bugs": {
    "url": "https://github.com/logpare/logpare/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/logpare/logpare",
    "directory": "packages/mcp"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "logpare": "workspace:^",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  }
}
